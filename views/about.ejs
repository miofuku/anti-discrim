<!DOCTYPE html>
<html lang="<%= language %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <%- include('partials/navigation', { currentPath: path }) %>

    <select id="langSelect">
        <option value="zh" <%= (language === 'zh') ? 'selected' : '' %>>中文</option>
        <option value="en" <%= (language === 'en') ? 'selected' : '' %>>English</option>
    </select>

    <main>
        <section id="about">
            <h1><%= __('about.title') %></h1>
            <h2><%= __('about.subtitle') %></h2>

            <p><%= __('about.description') %></p>

            <h3><%= __('about.ourMotivation') %></h3>
            <p><%= __('about.motivation') %></p>

            <h3><%= __('about.hopeToAchieve') %></h3>
            <p><%= __('about.achieve') %></p>
            <ul>
                <li><%= __('about.achieve-1') %></li>
                <li><%= __('about.achieve-2') %></li>
                <li><%= __('about.achieve-3') %></li>
                <li><%= __('about.achieve-4') %></li>
                <li><%= __('about.achieve-5') %></li>
            </ul>

            <h3><%= __('about.whyMatters') %></h3>
            <p><%= __('about.matters') %></p>
            <ul>
                <li><%= __('about.matters-1') %></li>
                <li><%= __('about.matters-2') %></li>
                <li><%= __('about.matters-3') %></li>
                <li><%= __('about.matters-4') %></li>
            </ul>

            <h3><%= __('about.visionForTheFuture') %></h3>
            <p><%= __('about.vision-1') %></p>

            <p><%= __('about.vision-2') %></p>

            <p><%= __('about.vision-3') %></p>
        </section>
    </main>

    <footer>
        <p>Contact: hello@voiceout.de</p>
    </footer>

    <script src="/js/main.js"></script>
</body>
</html>